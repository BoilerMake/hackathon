%h1 Listing hackers
= will_paginate @hackers
%table.table.striped
  %tr
    %th First
    %th Last
    %th School
    %th Email
    %th
    %th Number of rankings
    %th Application Completed?
    %th Have I ranked?
  - @hackers.each do |hacker|
    %tr
      %td= hacker.first_name
      %td= hacker.last_name
      %td= hacker.school.present? ? hacker.school.name : ""
      %td= hacker.email
      %td
        -if(hacker.should_i_rank)
          %a{href: "/execs/hacker_detail/#{hacker.id}", style: 'color: green;'}="RANK"
        -else
          %a{href: "/execs/hacker_detail/#{hacker.id}", style: 'color: orange;'}="view"
      %td= "#{hacker.hacker_ranking.count}"
      %td= "#{hacker.application_completed?  ? 'YES' : 'no'}"
      %td= "#{hacker.have_i_ranked ? 'YES' : 'no'}"
= will_paginate @hackers

