= content_for :extra_css do
  = stylesheet_link_tag 'hackers'
  = stylesheet_link_tag 'updates'
.container
  = render 'shared/flash.html.haml'
  %h1 Announcements
  - if current_user.present? && current_user.exec?
    = link_to  'Post New Announcement', new_update_path
  - @updates.each do |update|
    .update
      .update-header
        %h2.update-title
          = update.title
        %span.update-timestamp
          = update.created_at
      .update-header-bottom
      .update-body
        = update.body
:javascript
  $(document).ready( function() {
    $('.update-timestamp').each(function(index, el) {
      var date = new Date($(el).html());
      console.log(date);
      $(el).html(date.toLocaleTimeString());
    });
  } );
