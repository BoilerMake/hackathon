= content_for :extra_css do
  = stylesheet_link_tag 'checkin'

:javascript
  window.checkin_token = "#{@checkin_token}"

.container
  %h1 Hacker Check-in
  = form_tag '/execs/checkin/query',
             remote: true,
             "data-type" => :json,
             id: :user_query do
    = label_tag 'First Name'
    = text_field_tag :first_name
    %br

    = label_tag 'Last Name'
    = text_field_tag :last_name
    %br

    = label_tag 'Email'
    = text_field_tag :email
    %br

    = label_tag 'School'
    = text_field_tag :school
    %br

    = submit_tag "Submit"

  .results
