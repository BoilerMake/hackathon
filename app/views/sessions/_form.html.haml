= form_tag sessions_path do
  .field
    = label_tag :email
    = text_field_tag :email, params[:email], required: true
  .field
    = label_tag :password
    = password_field_tag :password, required: true
  %p
    = link_to 'forgotten password?', new_password_reset_path
  .field
    = label_tag :remember_me
    = check_box_tag :remember_me, 1, params[:remember_me], required: true
  .actions
    = submit_tag 'Log in', class: 'btn btn-primary'
