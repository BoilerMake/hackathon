- flash.each do |name, msg|
  - if name == 'alert'
    = content_tag :div, msg, class: 'alert alert-danger' # red flash
  - elsif name =='success'
    = content_tag :div, msg, class: 'alert alert-success' # green flash
  - else # normally a :notice
    = content_tag :div, msg, class: 'alert alert-info' # blue flash
