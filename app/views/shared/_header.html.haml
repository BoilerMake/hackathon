= content_for :partial_css do
  = stylesheet_link_tag 'header'
%header
  %script{:src => "//use.typekit.net/pcy4ypw.js"}
  :javascript
    try{Typekit.load();}catch(e){}
  %link{:rel => :stylesheet, :type => :"text/css", :href => "http://fonts.googleapis.com/css?family=Source+Code+Pro:300|Roboto:300,500"}
  /<link href='http://fonts.googleapis.com/css?family=Source+Code+Pro:300,400|Open+Sans:600' rel='stylesheet' type='text/css'>
/
  .container
    =link_to root_url do
      =image_tag 'logo.jpg'
    .login
      - if current_user.nil?
        %a Log In
        = form_tag sessions_path do
          = label_tag 'Email'
          = email_field_tag :email
          = label_tag 'Password'
          = password_field_tag :password
          .forgot-password-toggle
            Forgot Password?
          .remember-me-container
            %input.login-text{:type => "checkbox"}
            %span
              Remember Me
          .clearfix
          %input{type: 'button', text: 'Cancel', value: 'cancel'}
          = submit_tag :Submit
      - else
        = link_to 'Log Out', logout_path
/
