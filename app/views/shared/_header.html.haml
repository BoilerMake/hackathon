= content_for :partial_css do
  = stylesheet_link_tag 'header'
%header
  .container
    =link_to root_url do
      =image_tag 'logo.jpg'
    .login
      - if current_user.nil?
        %a Log In
        = form_tag sessions_path do
          = label_tag 'Email'
          = email_field_tag :email
          = label_tag 'Password'
          = password_field_tag :password
          .forgot-password-toggle
            Forgot Password?
          .remember-me-container
            %input.login-text{:type => "checkbox"}
            %span
              Remember Me
          .clearfix
          %input{type: 'button', text: 'Cancel', value: 'cancel'}
          = submit_tag :Submit
      - else
        = link_to 'Log Out', logout_path
