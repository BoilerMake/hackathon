!!!
%html
  %head
    %title BoilerMake
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1">
    <meta property="og:url" content="http://www.boilermake.org" />
    <meta property="og:title" content="BoilerMake" />
    <meta property="og:image" content="#{asset_path 'fb-website-image.png' }" />
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag    'pages'   if params[:controller] == 'pages'
    = stylesheet_link_tag    'hackers' if params[:controller] == 'hackers'
    = stylesheet_link_tag    'teams'   if params[:controller] == 'teams'
    = stylesheet_link_tag    'https://fonts.googleapis.com/css?family=Source+Code+Pro:200,300,400|Roboto:300,500'
    = stylesheet_link_tag    'https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js'
    = yield :partial_css
    = yield :extra_css
    = yield :extra_js
    = yield :manual_css
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = render 'shared/google_analytics'
    = csrf_meta_tags
  %body
    = yield
