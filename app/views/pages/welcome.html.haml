  .main-content
    =render "shared/flash.html.haml"
    .cover.vertical-center
      =image_tag("logo-thin-white.svg", class: "flickerIn")
      %h1.flickerIn BoilerMake
      %p.flickerIn Oct. 16–18 | Purdue University
      - if current_user.present?
        %div.button-row
          - if current_user.exec?
            = link_to execs_dashboard_url do
              %button.button.flickerIn Dashboard
          - elsif current_user.sponsor?
            = link_to sponsors_resume_portal_url do
              %button.button.flickerIn Dashboard
          - else
            = link_to dashboard_url do
              %button.button.flickerIn Dashboard
          = link_to logout_url do
            %button.button.flickerIn Log Out
      - else
        %div.button-row
          %button.button.flickerIn#applyButton Applications Closed!
          %a{href: 'mailto:sponsorship@boilermake.org'}
            %button.button.flickerIn Sponsor
        %div.button-row
          %button.button-plain.flickerIn{onclick: 'showForm("#loginForm")'} Already Registered?
      .scrolldown.flickerIn
        %a{:href => "#about", :id => "scrollBtn"} scroll down

  - if @should_skip_intro
    = javascript_tag do
      window.shouldSkipIntro = true;

  %div.full-form.loginForm#loginForm{style: 'display: none;'}
    = form_tag sessions_path do
      = label_tag 'Email'
      = email_field_tag :email, nil
      = label_tag 'Password'
      = password_field_tag :password, nil
      %div.button-row
        = submit_tag 'log in', { class: 'button' }
        = button_tag "Cancel", type: 'button', class: 'button', onclick: 'hideForm()'
        = button_tag "Forgot Password?", type: 'button', class: 'button', onclick: 'showForm("#forgotPasswordForm")'

  %div.full-form.passwordForm#forgotPasswordForm{style: 'display: none;'}
    = form_tag password_resets_path, method: :post do
      = label_tag 'Email'
      = email_field_tag :email, nil
      %div.button-row
        = submit_tag 'Reset Password', { class: 'button' }
        = button_tag "Cancel", type: 'button', class: 'button', onclick: 'hideForm()'

  .replace-div
  .navigation
    .nav-content
